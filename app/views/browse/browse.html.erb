<div class="row">
    <div class=" col-md-4 ">
    	<%= render "layouts/profile_bar" %>

<ul class="nav nav-tinder-side mb-3 px-4" id="pills-tab" role="tablist">
  <li class="nav-item" role="presentation">
    <a class="nav-link active" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-home" type="button" role="tab" aria-controls="pills-home" aria-selected="true">Match</a>
  </li>
  <li class="nav-item" role="presentation">
    <a class="nav-link" id="pills-profile-tab" data-bs-toggle="pill" data-bs-target="#pills-profile" type="button" role="tab" aria-controls="pills-profile" aria-selected="false">Messages</a>
  </li>
</ul>
<div class="tab-content" id="pills-tabContent">
  <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
          <%= render "browse/matches" %>

  </div>
  <div class="tab-pane px-4 fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
  Messages not found
  </div>
</div>

    </div>
    <div class="col-9 col-md-8 bg-white">
        <ul id="slides">
            <% @users.each_with_index do |user, i| %>
            <li class="slide <%= 'showing' if i == 0 %>" data-id="<%= user.id %>">
              <% if user.images.attached? %>
                <div class="image-carousel" style="background-image: url('<%= url_for user.images.first %>')"></div>
              <% else %>
                <div class="image-carousel" style="background-image: url('')"></div>
              <% end %>

                <div class="user-details">
                    <span class="user-name"><%= user.first_name %></span>, 31<br />
                    <i class="fa fa-graduation-cap"></i> &nbsp Job /Studies<br />
                    &nbsp<i class="fa fa-map-marker"></i> &nbsp &nbsp Location
                </div>
            </li>
            <% end %>
        </ul>

        <div id="slide-controls">
	        <div class="tinder--buttons">
	            <span  id="decline"><i class="fa fa-times-circle fa-3x"></i></span>
	            <span  id="approve"><i class="fa fa-heart fa-3x"></i></span>
	        </div>
        </div>
        <div id="conversation">
         </div>
    </div>
</div>
