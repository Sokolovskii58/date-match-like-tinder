	<div class="row">
		<div class="col-12 top-bar">
			<i class="fa fa-times float-left" id="close-conversation"></i>
		<%= link_to image_tag(@profile.images.first, width: "40px", height: "40px", class: "float-right profile-thumb rounded-circle mr-2"), "" %>
			<span><%= @profile.first_name %></span>
		</div>
	</div>
	<div class="row">
		<div class="col-12 text-center">
			<p>You matched with <span> <%= @profile.first_name %> </span> <%= @match.created_at.strftime("%d/%m/%Y") %> ago </p>

			<%= link_to image_tag(@profile.images.first, width: "200px", height: "200px", class: " rounded-circle"), "" %>

			<p> Send them a message and make them smile :) </p>
		</div>
	</div>
	<div class="row">
		<div class="col-12">
			<form>
				<div class="form-group">
					<input type="text" name="message" value="" placeholder="Enter your message" class="form-control">
					<input type="submit" name="submit" value="Send" class="btn btn-success">
				</div>
			</form>
		</div>
	</div>
