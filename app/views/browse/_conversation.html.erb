<div class="row">
  <div class="col-12 top-bar">
    <i class="fa fa-times fa-2x text-muted float-right" id="close-conversation"></i>
    <%= link_to profile_thumbnail(@profile, { width: "40px", height: "40px", class: "float-left profile-thumb rounded-circle mr-3" }), "#" %>
    <p class="text-muted mt-2">You matched with <%= @profile.first_name %> on
      <%= @match.created_at.strftime("%m/%d/%Y") %>.</p>
  </div>
</div>
<div class="row">
  <div class="col-12 text-center">
    <% if @conversation.new_record? %>
      <div id="initiate-conversation">
        <p class="mt-3">
          You matched with <span><%= @profile.first_name %></span> <%=
          time_ago_in_words @match.created_at %> ago.
        </p>
        <%= link_to profile_thumbnail(@profile, { width: "200px", height: "200px", class: "rounded-circle"}), "#" %>
        <p class="mt-5">Send them a message and make them smile :)</p>
      </div>
    <% end %>

    <div id="conversation-messages" %>
      <%= render partial: "browse/messages" unless @conversation.new_record? %>
    </div>
  </div>
</div>
<div class=" row">
  <div class="col-12 mt-5 bottom-bar">
    <%= render partial: "browse/new_conversation" %>
  </div>
</div>
