<div class="container col-xl-10 col-xxl-8 px-4 py-5">
  <div class="form-signin">

<%= form_with model: @conversation do |form| %>
  <%= form.hidden_field :recipient_id, value: @profile.id %>
  <div class="form-group">
    <%= form.fields_for :messages, @message do |message_form| %>
      <%= message_form.hidden_field :account_id, value: current_account.id  %>
      <%= message_form.text_field :body, placeholder: "Message", id: "message-input", class: "form-control form-control-lg" %>
    <% end %>
    <div class="">
    <input type="submit" name="submit" value="Send" class="w-100 btn btn-dark btn-lg mt-5 ">
    </div>
  </div>
<% end %>
</div>

</div>
